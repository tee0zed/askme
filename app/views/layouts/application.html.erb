<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8"/>
  <title>Askme</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="header">
  <div>
    <div class="header-logo">
      <h1 class="text-medium text-center"><%=link_to "Askme", root_path %></h1>
    </div>
    <div class="header-nav">
      <div class="header-nav">
        <% if current_user %>
          <%= link_to "@#{current_user.username}", user_path(current_user) %> |
          <%= link_to 'Выйти', log_out_path,
                      class: 'button-small' %>
        <% else %>
          <%= link_to 'Зарегистрироваться', sign_up_path,
                      class: 'button-small' %>
          <%= link_to 'Войти', log_in_path,
                      class: 'button-small' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <% if flash.any? %>
    <div class="margin-both">
      <% flash.each do |name, message| %>
        <%= content_tag :div, message, class: "flash-alert" %>
      <% end %>
    </div>
  <% end %>
    <%= yield %>
</div>

</body>
</html>
