<div class="index-container purple">
  <div class="text-center margin-both-large">
    <div class="margin-both-large">
      <h1 class="title-medium">Наши пользователи</h1>
    </div>
    <div class="flex-section-row">
      <% @users.each do |user| %>
        <div class="user-item">
          <div>
            <%= link_to image_tag(user_avatar(user), class: 'avatar-small'), user_path(user) %>
          </div>
          <div class="question-text">
            <%= user.username %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="flex-section-row">
      <div class="question-box">
        <% @hashtags.each do |hashtag| %>
          <span class="margin-both"><%= link_to '#'+hashtag.text, hashtag_path(hashtag), class: 'author-link' %></span>
        <% end %>
      </div>
    </div>
  </div>
</div>
